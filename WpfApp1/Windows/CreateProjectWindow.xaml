<Window x:Class="ClassroomAssignment.Windows.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClassroomAssignment"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                <Button Content="Create New Project" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" Margin="0,0,0,10"/>
                <Button Content="Existing Project" HorizontalAlignment="Center" Height="Auto" VerticalAlignment="Center" Click="Open_Click" Width="106"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
